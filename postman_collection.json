{
  "info": {
    "name": "Order Execution Engine",
    "description": "API collection for testing the order execution engine with DEX routing",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Submit Order",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tokenIn\": \"USDC\",\n  \"tokenOut\": \"SOL\",\n  \"amount\": 100,\n  \"type\": \"market\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/orders/execute",
          "host": ["{{base_url}}"],
          "path": ["api", "orders", "execute"]
        },
        "description": "Submit a new market order for execution"
      },
      "response": []
    },
    {
      "name": "Get Order by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/orders/{{orderId}}",
          "host": ["{{base_url}}"],
          "path": ["api", "orders", "{{orderId}}"]
        },
        "description": "Retrieve order details by order ID"
      },
      "response": []
    },
    {
      "name": "Get All Orders",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/orders",
          "host": ["{{base_url}}"],
          "path": ["api", "orders"]
        },
        "description": "Retrieve all orders from history"
      },
      "response": []
    },
    {
      "name": "Get Routing Logs",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/logs",
          "host": ["{{base_url}}"],
          "path": ["api", "logs"]
        },
        "description": "Retrieve all routing decision logs"
      },
      "response": []
    },
    {
      "name": "Get Routing Logs by Order",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/logs?orderId={{orderId}}",
          "host": ["{{base_url}}"],
          "path": ["api", "logs"],
          "query": [
            {
              "key": "orderId",
              "value": "{{orderId}}"
            }
          ]
        },
        "description": "Retrieve routing logs for a specific order"
      },
      "response": []
    },
    {
      "name": "Submit Multiple Orders",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tokenIn\": \"USDC\",\n  \"tokenOut\": \"TOKEN\",\n  \"amount\": 250\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/orders/execute",
          "host": ["{{base_url}}"],
          "path": ["api", "orders", "execute"]
        },
        "description": "Use Postman Runner to submit multiple orders concurrently"
      },
      "response": []
    },
    {
      "name": "Submit Order - Invalid (Missing Fields)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tokenIn\": \"USDC\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/orders/execute",
          "host": ["{{base_url}}"],
          "path": ["api", "orders", "execute"]
        },
        "description": "Test validation - should return 400 error"
      },
      "response": []
    },
    {
      "name": "Submit Order - Large Amount",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tokenIn\": \"USDC\",\n  \"tokenOut\": \"BTC\",\n  \"amount\": 10000\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/orders/execute",
          "host": ["{{base_url}}"],
          "path": ["api", "orders", "execute"]
        },
        "description": "Test with large order amount"
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "orderId",
      "value": "",
      "type": "string"
    }
  ]
}
